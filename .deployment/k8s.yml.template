apiVersion: apps/v1
kind: Deployment
metadata:
  name: expense-memo-bot-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: expense-memo-bot
  template:
    metadata:
      labels:
        app: expense-memo-bot
    spec:
      containers:
      - name: expense-memo-bot
        image: ${IMAGE}
        ports:
        - containerPort: 3000
        env:
          - name: LINE_CHANNEL_ACCESS_TOKEN
            value: ${LINE_CHANNEL_ACCESS_TOKEN}
          - name: LINE_CHANNEL_SECRET
            value: ${LINE_CHANNEL_SECRET}
        volumeMounts:
          - name: expense-memo-bot-db
            mountPath: /app/db
      volumes:
        - name: expense-memo-bot-db
          persistentVolumeClaim:
            claimName: expense-memo-bot-pvc
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: expense-memo-bot-pvc
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
apiVersion: v1
kind: Service
metadata:
  name: expense-memo-bot-service
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 3000
  selector:
    app: expense-memo-bot
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: expense-memo-bot-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
spec:
  tls:
  - hosts: [${DOMAIN}]
    secretName: expense-memo-bot-tls
  rules:
    - host: ${DOMAIN}
      http:
        paths:
          - pathType: Prefix
            path: /
            backend:
              service:
                name: expense-memo-bot-service
                port:
                  number: 80